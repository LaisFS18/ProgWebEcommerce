import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class ADM {  
    public static void atualizarDadosADM(String nvNome, int nvCEP, int nvNumero, String nvComplemento, String nvEmail, String nvLogin, String nvSenha) {
        String sql = "UPDATE usuarios SET CEP = ?, Numero = ?, Complemento = ?, Email = ?, Login = ?, Senha = ?, WHERE nome = ?";

        try (Connection conexao = ConexaoSQL.conectar();
             PreparedStatement preparedStatement = conexao.prepareStatement(sql)) {

            preparedStatement.setString(1, nvNome);
            preparedStatement.setInt(2, nvCEP);
            preparedStatement.setInt(3, nvNumero);
            preparedStatement.setString(4, nvComplemento);
            preparedStatement.setString(5, nvEmail);
            preparedStatement.setString(6, nvLogin);
            preparedStatement.setString(7, nvSenha);

            int linhasAfetadas = preparedStatement.executeUpdate();

            if (linhasAfetadas > 0) {
                System.out.println("Produto atualizado com sucesso.");
            } else {
                System.out.println("Produto n√£o encontrado.");
            }

        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
