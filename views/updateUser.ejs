<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Dashboard</title>
  </head>
  <body>
    <h1>Dashboard</h1>

    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>

    <ul>
      <% if(messages.success_msg) { %>
      <li><%= messages.success_msg %></li>
      <% } %>
    </ul>
    
    <h1>Editar Informações</h1>
    <form action="/users/editProfile" method="POST">
      <label for="newName">Nome:</label>
      <input
          type="text"
          id="newName"
          name="newName"
          placeholder="Novo nome"
          required
      />
      <br/>
  
      <label for="newEndereco">Endereço:</label>
      <input
          type="text"
          id="newEndereco"
          name="newEndereco"
          placeholder="Novo endereço"
          required
      />
      <br/>
  
      <label for="newEmail">Email:</label>
      <input
          type="email"
          id="newEmail"
          name="newEmail"
          placeholder="Novo email"
          required
      />
      <br/>
  
      <label for="newSenha">Nova Senha:</label>
      <input
          type="password"
          id="newSenha"
          name="newSenha"
          placeholder="Nova senha"
          required
      />
      <br/>
  
      <label for="confirmNewSenha">Confirme a Nova Senha:</label>
      <input
          type="password"
          id="confirmNewSenha"
          name="confirmNewSenha"
          placeholder="Confirme a nova senha"
          required
      />
      <br/>
  
      <input type="submit" value="Alterar" />
  </form>  

</body>
</html>
